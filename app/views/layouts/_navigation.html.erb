<div class="ui teal inverted small menu">
  <div class="ui container">
    <%= link_to "Chatroom", root_path, class: "item" %>

    <div class="right menu">
      <div class="ui dropdown item">
        Account <i class="dropdown icon"></i>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to "Sign out #{current_user.username}", sign_out_path, :method => :delete, class: "item" %>
          <% else %>
            <%= link_to "Sign in", sign_in_path, class: "item" %>
          <% end %>
        </div>
      </div>
      <div class="item">
        <% unless logged_in? %>
          <%= link_to "Sign up", sign_up_path, class: "ui primary button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
